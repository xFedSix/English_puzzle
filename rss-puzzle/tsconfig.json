{
    "compilerOptions": {
        "target": "es6",
        "module": "es2015",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strictNullChecks": true,
    },
    "paths": {
        "@worldCollectionData/*": [
            "src/worldCollectionData/*"
        ]
    },
    "rules": {
        "typedef": [
            true,
            "call-signature",
            "parameter",
            "property-declaration",
            "variable-declaration",
            "member-variable-declaration",
            "object-destructuring"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.css",
        "src/**/*.json"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}